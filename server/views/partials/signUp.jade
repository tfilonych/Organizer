.row.profile
    .col-md-5.col-md-offset-3
        .well.bg-prof
            form.form-horizontal(name="signUpForm")
                h3.text-center.text-primary Sign up
                .form-group
                    label.col-md-5.control-label(for='username') Username
                    .col-md-6
                        input.form-control(name='username', type='text', placeholder='username', ng-model='username', required)
                .form-group
                    label.col-md-5.control-label(for='firstName') First name
                    .col-md-6
                        input.form-control(name='firstName', type='text', placeholder='firstName', ng-model='firstName', required)
                .form-group
                    label.col-md-5.control-label(for='lastName') Last name
                    .col-md-6
                        input.form-control(name='lastName', type='text', placeholder='lastName', ng-model='lastName', required)
                .form-group
                    label.col-md-5.control-label(for='password') Password
                    .col-md-6
                        input.form-control(name='password', type='password', placeholder='password', ng-model='password')
                .form-group
                    button.btn.btn-default.col-md-3.col-md-offset-1(ng-click='cancel()') Cancel
                    button.btn.btn-primary.col-md-6.col-md-offset-1(ng-click='signup()', ng-disabled='signUpForm.$invalid') Submit
