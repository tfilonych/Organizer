.row.profile(ng-controller="loginCtrl")
    div.col-md-4.col-md-offset-4
        .well.login
            form.form-horizontal(name="loginForm")
                .row.title.col-md-6.col-md-offset-3
                    h2.text-center.text-primary Log In
                        span.pull-left.glyphicon.glyphicon-user
                .form-group
                    label.col-md-3.control-label.col-md-offset-1(for='email') Username:
                    .col-md-7
                        input.form-control(name='username', type='text', placeholder='username', ng-model='username', required)
                .form-group
                    label.col-md-3.control-label.col-md-offset-1(for='password') Password:
                    .col-md-7
                        input.form-control(name='password', type='password', placeholder='password', ng-model='password', required)
                .form-group
                    .btn.btn-primary.col-md-10.col-md-offset-1(ng-click='signin(username, password)', ng-disabled='loginUpForm.$invalid') Log In
                    a.btn.btn-default.col-md-10.col-md-offset-1.text-muted(href='/signup') Sign Up








