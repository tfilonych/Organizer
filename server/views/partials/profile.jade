.row.profile
    .col-md-5.col-md-offset-3
        .well.bg-prof
            form.form-horizontal(name="profileForm")
                h3.text-center.text-primary User profile
                .form-group
                    label.col-md-5.control-label(for='email') Email
                    .col-md-6
                        input.form-control(name='email', type='text', ng-model='user.username', required)
                .form-group
                    label.col-md-5.control-label(for='fname') First name
                    .col-md-6
                        input.form-control(name='fname', type='text', ng-model='user.firstName', required)
                .form-group
                    label.col-md-5.control-label(for='lname') Last name
                    .col-md-6
                        input.form-control(name='lname', type='text', ng-model='user.lastName', required)
                .form-group
                    label.col-md-5.control-label(for='password') Password
                    .col-md-6
                        input.form-control(name='password', type='password',ng-model='user.password', required)
                .form-group
                    button.btn.btn-default.col-md-3.col-md-offset-1 Cancel
                    button.btn.btn-primary.col-md-6.col-md-offset-1(ng-click='update()', ng-disabled='profileForm.$invalid') Submit
